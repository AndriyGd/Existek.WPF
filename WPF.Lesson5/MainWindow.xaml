    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToolBarTray>
            <ToolBar>
                <Button ToolTip="Save">
                    <Image Source="Images/Save.png" Width="15"/>
                </Button>
                <Button ToolTip="New">
                    <Image Source="Images/view_new.png" Width="15"/>
                </Button>
                <Button ToolTip="Edit">
                    <Image Source="Images/view_edit.png" Width="15"/>
                </Button>
                <Separator/>
                <Button ToolTip="Refresh" Click="ButtonRefresh_OnClick">
                    <Image Source="Images/arrow_refresh.png" Width="15"/>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button>
                    <Image Source="Images/undelete.png" Width="15"/>
                </Button>
                <Button ToolTip="Remove" IsEnabled="False"
                        ToolTipService.ShowOnDisabled="True">
                    <Image Source="Images/cross.png" Width="15"/>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <ListView Grid.Row="1" Name="LstView" DockPanel.Dock="Top">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Company Name" DisplayMemberBinding="{Binding CompanyName}"/>
                        <GridViewColumn Header="Contact Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Max Items" DisplayMemberBinding="{Binding MaxItems}"/>
                        <GridViewColumn Header="Percent">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding Percent}" Width="70"/>
                                        <TextBlock HorizontalAlignment="Center"
                                                   Text="{Binding Percent, StringFormat={}{0} %}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
