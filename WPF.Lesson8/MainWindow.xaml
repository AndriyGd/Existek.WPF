    <DataGrid AutoGenerateColumns="False" CanUserDeleteRows="False" CanUserAddRows="False"
              AlternatingRowBackground="AliceBlue"
              GridLinesVisibility="Vertical"
              ItemsSource="{Binding Books}"
              SelectedItem="{Binding SelectedBook, UpdateSourceTrigger=PropertyChanged}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
            <DataGridTextColumn Header="Author" Binding="{Binding Author}"/>
            <DataGridTextColumn Header="Pages" Binding="{Binding Pages}"/>
            <DataGridTextColumn Header="Description" Binding="{Binding Description}"
                                Width="180"
                                ElementStyle="{StaticResource BDes}"/>
            <DataGridTemplateColumn>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button Background="Transparent" ToolTip="Remove Book"
                                BorderThickness="0" Click="ButtonBase_OnClick">
                            <Image Source="Resources/cross.png"/>
                        </Button>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
