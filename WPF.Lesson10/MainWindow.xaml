        xmlns:converters="clr-namespace:WPF.Lesson10.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <converters:BooleanToVisibleConverter x:Key="BooleanToVisibleConverter"/>
        <converters:CityStreetToFullAddressConverter x:Key="FullAddressConverter"/>
        <converters:SalaryToColorConverter x:Key="SalaryToColorConverter"/>
        <Style TargetType="TextBox">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value=" 5 0 0 0"/>
        </Style>
