<Window x:Class="WPF.Lesson15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Lesson15"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Name="Button1" Content="&#xf015;" FontFamily="{StaticResource FontAwesome}"
                Style="{StaticResource ButtonBaseStyle}" IsEnabled="False"/>
        <Button Name="Button2" Content="&#xf125;" Margin="0 5 0 0"
                Style="{StaticResource ButtonBaseStyle}" Width="120"
                FontFamily="{StaticResource FontAwesome}"
                Click="Button2_OnClick"/>
    </StackPanel>
</Window>
